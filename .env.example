# =============================================================================
# CONFIGURACIÓN DE ENTORNO - ConversaAI
# =============================================================================
# Copia este archivo como .env y configura las variables según tu entorno

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# =============================================================================
# BASE DE DATOS
# =============================================================================
# Para desarrollo (SQLite)
DATABASE_URL=sqlite:///./chatbot.db

# Para producción (PostgreSQL)
# DATABASE_URL=postgresql://chatbot_user:chatbot_pass@localhost:5432/chatbot_db
# DATABASE_URL_ASYNC=postgresql+asyncpg://chatbot_user:chatbot_pass@localhost:5432/chatbot_db

# Configuración PostgreSQL para Docker
POSTGRES_DB=chatbot_db
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=chatbot_pass

# =============================================================================
# REDIS (CACHE Y SESIONES)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Para Docker con password
# REDIS_URL=redis://:redis_password@localhost:6379/0

# =============================================================================
# JWT Y AUTENTICACIÓN
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256

# =============================================================================
# CORS Y SEGURIDAD
# =============================================================================
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000,http://127.0.0.1:4321
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
TRUSTED_HOSTS=localhost,127.0.0.1

# =============================================================================
# SERVICIOS DE IA
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro

# =============================================================================
# ALMACENAMIENTO DE ARCHIVOS
# =============================================================================
# MinIO (S3 compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=chatbot-files
MINIO_SECURE=false

# AWS S3 (alternativa)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-s3-bucket

# =============================================================================
# BASE DE DATOS VECTORIAL
# =============================================================================
# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=chatbot_embeddings

# Pinecone (alternativa)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# PINECONE_INDEX_NAME=chatbot-embeddings

# =============================================================================
# CELERY (TAREAS ASÍNCRONAS)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# =============================================================================
# EMAIL Y NOTIFICACIONES
# =============================================================================
# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# SendGrid (alternativa)
# SENDGRID_API_KEY=your-sendgrid-api-key
# FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# WEBHOOKS Y INTEGRACIONES
# =============================================================================
# WhatsApp Business API
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token

# =============================================================================
# MONITOREO Y LOGGING
# =============================================================================
# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log Level
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MÉTRICAS Y ANALYTICS
# =============================================================================
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# PAGOS Y SUSCRIPCIONES
# =============================================================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret
# PAYPAL_MODE=sandbox

# =============================================================================
# FRONTEND (ASTRO)
# =============================================================================
PUBLIC_API_URL=http://localhost:8000
PUBLIC_SITE_URL=http://localhost:4321
PUBLIC_COMPANY_NAME=ConversaAI
PUBLIC_SUPPORT_EMAIL=support@chatbotsaas.com

# =============================================================================
# DESARROLLO Y TESTING
# =============================================================================
# Para desarrollo
RELOAD=true
WORKERS=1

# Para testing
TEST_DATABASE_URL=sqlite:///./test_chatbot.db
PYTEST_TIMEOUT=30

# =============================================================================
# PRODUCCIÓN
# =============================================================================
# SSL/TLS
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Dominio
DOMAIN=yourdomain.com
SUBDOMAIN=api

# CDN
CDN_URL=https://cdn.yourdomain.com

# =============================================================================
# DOCKER Y ORQUESTACIÓN
# =============================================================================
COMPOSE_PROJECT_NAME=chatbot-saas
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest
