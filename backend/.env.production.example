# ConversaAI - Production Environment Configuration Example
# Copia este archivo como .env.production y configura tus valores reales

# ========================
# APLICACIÓN
# ========================
DEBUG=false
APP_NAME="ConversaAI"
APP_VERSION="1.0.0"
ENVIRONMENT="production"

# ========================
# SEGURIDAD (CRÍTICO - CAMBIAR EN PRODUCCIÓN)
# ========================
# IMPORTANTE: Genera una clave secreta única y fuerte
SECRET_KEY="CHANGE_THIS_TO_A_STRONG_SECRET_KEY_32_CHARS_MIN"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================
# BASE DE DATOS
# ========================
# PostgreSQL para producción
DATABASE_URL="postgresql://chatbot_user:CHANGE_THIS_PASSWORD@postgres:5432/chatbot_production"

# ========================
# REDIS
# ========================
REDIS_URL="redis://:CHANGE_THIS_PASSWORD@redis:6379/0"
REDIS_PASSWORD="CHANGE_THIS_REDIS_PASSWORD"

# ========================
# INTELIGENCIA ARTIFICIAL
# ========================
# Google Gemini API
GEMINI_API_KEY="CHANGE_THIS_TO_YOUR_GEMINI_API_KEY"

# OpenAI API (opcional)
OPENAI_API_KEY="CHANGE_THIS_TO_YOUR_OPENAI_API_KEY"

# ========================
# INTEGRACIONES
# ========================
# WhatsApp Business API
WHATSAPP_VERIFY_TOKEN="CHANGE_THIS_TO_YOUR_WHATSAPP_VERIFY_TOKEN"
WHATSAPP_ACCESS_TOKEN="CHANGE_THIS_TO_YOUR_WHATSAPP_ACCESS_TOKEN"
WHATSAPP_PHONE_NUMBER_ID="CHANGE_THIS_TO_YOUR_PHONE_NUMBER_ID"

# Telegram Bot API
TELEGRAM_BOT_TOKEN="CHANGE_THIS_TO_YOUR_TELEGRAM_BOT_TOKEN"

# ========================
# EMAIL
# ========================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="CHANGE_THIS_TO_YOUR_EMAIL"
SMTP_PASSWORD="CHANGE_THIS_TO_YOUR_APP_PASSWORD"
SMTP_TLS=true

# ========================
# CORS
# ========================
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# ========================
# LOGGING
# ========================
LOG_LEVEL="WARNING"
LOG_FILE="/app/logs/app.log"

# ========================
# CELERY (TAREAS ASÍNCRONAS)
# ========================
CELERY_BROKER_URL="redis://:CHANGE_THIS_PASSWORD@redis:6379/1"
CELERY_RESULT_BACKEND="redis://:CHANGE_THIS_PASSWORD@redis:6379/2"

# ========================
# MONITOREO
# ========================
SENTRY_DSN="CHANGE_THIS_TO_YOUR_SENTRY_DSN"
PROMETHEUS_ENABLED=true

# ========================
# PRODUCCIÓN
# ========================
RELOAD=false
WORKERS=4

# ========================
# DOCKER SECRETS (OPCIONAL)
# ========================
# Si usas Docker secrets, puedes referenciarlos aquí
# POSTGRES_PASSWORD_FILE="/run/secrets/postgres_password"
# REDIS_PASSWORD_FILE="/run/secrets/redis_password"
