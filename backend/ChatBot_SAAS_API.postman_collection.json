              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Base de Conocimiento Principal\",\n  \"description\": \"Documentos y FAQ de la empresa\",\n  \"chatbot_id\": \"{{chatbot_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/knowledge/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "knowledge", ""]
            }
          }
        },
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [
