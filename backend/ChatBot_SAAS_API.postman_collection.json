      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/analytics/dashboard",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "analytics", "dashboard"]
            }
          }
        },
        {
          "name": "Get Conversation Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/analytics/conversations?period=7d",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "analytics", "conversations"],
              "query": [
                {
                  "key": "period",
                  "value": "7d"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
