# Configuraci贸n de la aplicaci贸n
APP_NAME="ChatBot SAAS"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Base de datos
DATABASE_URL="postgresql://chatbot_user:chatbot_pass@localhost:5432/chatbot_db"
DATABASE_URL_ASYNC="postgresql+asyncpg://chatbot_user:chatbot_pass@localhost:5432/chatbot_db"

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=3600

# APIs de IA
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORG_ID="your-openai-org-id"
GEMINI_API_KEY="your-gemini-api-key"

# Vector Database
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp-free"
PINECONE_INDEX_NAME="chatbot-vectors"

# Qdrant (alternativa)
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY="your-qdrant-api-key"

# Stripe para pagos
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Integraci贸n con canales
# WhatsApp
WHATSAPP_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_VERIFY_TOKEN="your-verify-token"

# Telegram
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

# Facebook
FACEBOOK_PAGE_ACCESS_TOKEN="your-facebook-page-token"
FACEBOOK_VERIFY_TOKEN="your-facebook-verify-token"

# Twilio (para SMS/WhatsApp alternativo)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# Google Services
GOOGLE_APPLICATION_CREDENTIALS="path/to/google-credentials.json"
GOOGLE_SHEETS_CREDENTIALS="path/to/sheets-credentials.json"

# Almacenamiento de archivos
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="chatbot-files"

# MinIO (alternativa local)
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="chatbot-files"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@chatbot-saas.com"

# Celery
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Logging y monitoreo
LOG_LEVEL="INFO"
SENTRY_DSN="your-sentry-dsn"

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:4321"

# Webhooks
WEBHOOK_SECRET="your-webhook-secret-for-validation"

# Desarrollo
RELOAD=true
WORKERS=1

# Producci贸n
ENVIRONMENT="development"  # development, staging, production
