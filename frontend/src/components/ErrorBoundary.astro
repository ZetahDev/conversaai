---
export interface Props {
  error?: string;
  title?: string;
  description?: string;
  showRetry?: boolean;
  showHome?: boolean;
  fullPage?: boolean;
  type?: 'error' | 'not-found' | 'unauthorized' | 'server-error' | 'network-error';
}

const { 
  error,
  title,
  description,
  showRetry = true,
  showHome = true,
  fullPage = false,
  type = 'error'
} = Astro.props;

const errorConfig = {
  'error': {
    title: title || 'Algo salió mal',
    description: description || 'Ha ocurrido un error inesperado. Por favor, inténtalo de nuevo.',
    icon: 'exclamation-triangle',
    color: 'red'
  },
  'not-found': {
    title: title || 'Página no encontrada',
    description: description || 'La página que buscas no existe o ha sido movida.',
    icon: 'question-mark-circle',
    color: 'gray'
  },
  'unauthorized': {
    title: title || 'Acceso no autorizado',
    description: description || 'No tienes permisos para acceder a esta página.',
    icon: 'lock-closed',
    color: 'yellow'
  },
  'server-error': {
    title: title || 'Error del servidor',
    description: description || 'El servidor está experimentando problemas. Inténtalo más tarde.',
    icon: 'server',
    color: 'red'
  },
  'network-error': {
    title: title || 'Error de conexión',
    description: description || 'No se pudo conectar con el servidor. Verifica tu conexión a internet.',
    icon: 'wifi',
    color: 'orange'
  }
};

const config = errorConfig[type];
const containerClass = fullPage 
  ? 'min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900'
  : 'flex items-center justify-center p-8';
---

<div class={containerClass}>
  <div class="max-w-md w-full text-center">
    <!-- Error Icon -->
    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-gray-100 dark:bg-gray-800 mb-6">
      {config.icon === 'exclamation-triangle' && (
        <svg class={`h-8 w-8 text-${config.color}-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
      )}
      
      {config.icon === 'question-mark-circle' && (
        <svg class={`h-8 w-8 text-${config.color}-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      )}
      
      {config.icon === 'lock-closed' && (
        <svg class={`h-8 w-8 text-${config.color}-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      )}
      
      {config.icon === 'server' && (
        <svg class={`h-8 w-8 text-${config.color}-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
        </svg>
      )}
      
      {config.icon === 'wifi' && (
        <svg class={`h-8 w-8 text-${config.color}-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0" />
        </svg>
      )}
    </div>
    
    <!-- Error Title -->
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
      {config.title}
    </h1>
    
    <!-- Error Description -->
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      {config.description}
    </p>
    
    <!-- Error Details (if provided) -->
    {error && (
      <div class="mb-8 p-4 bg-gray-100 dark:bg-gray-800 rounded-lg">
        <p class="text-sm text-gray-700 dark:text-gray-300 font-mono">
          {error}
        </p>
      </div>
    )}
    
    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {showRetry && (
        <button
          onclick="window.location.reload()"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Reintentar
        </button>
      )}
      
      {showHome && (
        <a
          href="/"
          class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Ir al inicio
        </a>
      )}
    </div>
    
    <!-- Additional Help -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        ¿Necesitas ayuda? 
        <a href="/contact" class="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">
          Contáctanos
        </a>
      </p>
    </div>
  </div>
</div>

<style>
  /* Ensure proper color classes are available */
  .text-red-500 { color: #ef4444; }
  .text-gray-500 { color: #6b7280; }
  .text-yellow-500 { color: #eab308; }
  .text-orange-500 { color: #f97316; }
</style>
