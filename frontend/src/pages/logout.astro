---
import Layout from '@/layouts/Layout.astro';

// Limpiar cualquier token que pueda quedar
Astro.cookies.delete('access_token');
---

<Layout title="Sesión Cerrada - ChatBot SAAS">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <!-- Icono de éxito -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 dark:bg-green-900">
          <svg class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900 dark:text-white">
          Sesión Cerrada
        </h2>
        
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          Has cerrado sesión exitosamente. Gracias por usar ChatBot SAAS.
        </p>
      </div>

      <div class="mt-8 space-y-4">
        <div>
          <a
            href="/login"
            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            Iniciar Sesión Nuevamente
          </a>
        </div>
        
        <div>
          <a
            href="/"
            class="group relative w-full flex justify-center py-3 px-4 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            Volver al Inicio
          </a>
        </div>
      </div>

      <!-- Información adicional -->
      <div class="mt-8 text-center">
        <p class="text-xs text-gray-500 dark:text-gray-400">
          ¿Necesitas ayuda? 
          <a href="/contact" class="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">
            Contáctanos
          </a>
        </p>
      </div>
    </div>
  </div>

  <!-- Auto-redirect script -->
  <script>
    // Opcional: redirigir automáticamente después de 5 segundos
    setTimeout(function() {
      const autoRedirect = confirm('¿Quieres ser redirigido al login automáticamente?');
      if (autoRedirect) {
        window.location.href = '/login';
      }
    }, 5000);
  </script>
</Layout>
