---
import AuthLayout from '@/layouts/AuthLayout.astro';

let errorMessage = '';

// Manejar el formulario de login en el servidor
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    // Preparar datos para el login
    const loginData = { email, password };

    // Llamar a la API de backend
    const response = await fetch('http://localhost:8000/api/v1/auth/login', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(loginData),
    });

    if (response.ok) {
      const data = await response.json();

      // Guardar el token en una cookie
      Astro.cookies.set('access_token', data.access_token, {
        httpOnly: true,
        secure: import.meta.env.PROD,
        sameSite: 'lax',
        maxAge: 60 * 60 * 24 * 7, // 7 d√≠as
        path: '/',
      });

      // Redirigir al dashboard
      return Astro.redirect('/dashboard');
    } else {
      const error = await response.json();
      errorMessage = error.detail || 'Error en el login';
    }
  } catch (error) {
    errorMessage = 'Error de conexi√≥n con el servidor';
  }
}

// Verificar si ya est√° logueado
const token = Astro.cookies.get('access_token');
if (token) {
  return Astro.redirect('/dashboard');
}
