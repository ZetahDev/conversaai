---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import IntegrationModal from '../components/integrations/IntegrationModal';

// Verificar autenticaci√≥n
const token = Astro.cookies.get('access_token');
if (!token) {
  return Astro.redirect('/login');
}

// Obtener datos del usuario
let user: any = null;
let company: any = null;
let integrations: any = null;

try {
  // Obtener informaci√≥n del usuario
  const userResponse = await fetch('http://localhost:8000/api/v1/auth/me', {
    headers: {
      'Authorization': `Bearer ${token.value}`,
      'Content-Type': 'application/json',
    },
  });

  if (userResponse.ok) {
    user = await userResponse.json();
  } else {
    Astro.cookies.delete('access_token');
    return Astro.redirect('/login');
  }

  // Obtener informaci√≥n de la empresa
  const companyResponse = await fetch('http://localhost:8000/api/v1/companies/me', {
    headers: {
      'Authorization': `Bearer ${token.value}`,
      'Content-Type': 'application/json',
    },
  });

  if (companyResponse.ok) {
    company = await companyResponse.json();
  }

  // Obtener integraciones disponibles
  const integrationsResponse = await fetch('http://localhost:8000/api/v1/integrations/available');

  if (integrationsResponse.ok) {
    integrations = await integrationsResponse.json();
  }
} catch (error) {
  console.error('Error obteniendo datos:', error);
}
