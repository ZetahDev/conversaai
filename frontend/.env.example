# API Configuration
PUBLIC_API_URL=http://localhost:8000
PUBLIC_API_VERSION=v1

# App Configuration
PUBLIC_APP_NAME="ConversaAI"
PUBLIC_APP_VERSION="1.0.0"
PUBLIC_APP_URL=http://localhost:4321

# Stripe Configuration
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Google Analytics (opcional)
PUBLIC_GA_TRACKING_ID=

# Sentry (opcional)
PUBLIC_SENTRY_DSN=

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=true
PUBLIC_ENABLE_CHAT_WIDGET=true
PUBLIC_ENABLE_DARK_MODE=true

# Development
NODE_ENV=development
PUBLIC_DEBUG=true

# Social Login (opcional)
PUBLIC_GOOGLE_CLIENT_ID=
PUBLIC_FACEBOOK_APP_ID=

# Chat Widget Configuration
PUBLIC_WIDGET_DEFAULT_THEME=light
PUBLIC_WIDGET_DEFAULT_POSITION=bottom-right

# File Upload
PUBLIC_MAX_FILE_SIZE=10485760
PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md

# Internationalization
PUBLIC_DEFAULT_LOCALE=es
PUBLIC_SUPPORTED_LOCALES=es,en

# Maps (opcional)
PUBLIC_GOOGLE_MAPS_API_KEY=

# WebSocket
PUBLIC_WS_URL=ws://localhost:8000/ws

# Security Configuration
PUBLIC_ENABLE_CSRF=true
PUBLIC_ENABLE_RATE_LIMITING=true
PUBLIC_SESSION_TIMEOUT=3600
PUBLIC_ALLOWED_ORIGINS=http://localhost:4322,http://localhost:3000

# Password Requirements
PUBLIC_PASSWORD_MIN_LENGTH=8
PUBLIC_PASSWORD_REQUIRE_UPPERCASE=true
PUBLIC_PASSWORD_REQUIRE_LOWERCASE=true
PUBLIC_PASSWORD_REQUIRE_NUMBERS=true
PUBLIC_PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
PUBLIC_LOGIN_MAX_ATTEMPTS=5
PUBLIC_LOGIN_WINDOW_MS=300000
PUBLIC_API_REQUESTS_PER_MINUTE=60

# Logging
PUBLIC_LOGGING_ENDPOINT=
PUBLIC_LOGGING_LEVEL=info
